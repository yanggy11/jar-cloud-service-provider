<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yanggy.cloud.mapper.MenuMapper">
    <resultMap id="menuMap" type="com.yanggy.cloud.entity.Menu">
        <result column="id" property="id" jdbcType="BIGINT"/>
        <result column="menu" property="menu" jdbcType="VARCHAR"/>
        <result column="menu_name" property="menuName" jdbcType="VARCHAR"/>
        <result column="parent_id" property="parentId" jdbcType="INTEGER"/>
        <result column="icon" property="icon" jdbcType="TIMESTAMP"/>
    </resultMap>

    <select id="getAllMenusInpage" resultMap="menuMap" >
        select id, menu, menu_name, parent_id, icon,from menu
        order by id
        limit #{offset}, #{size}
    </select>

    <select id="countMenus">
        select count(id) from menus
    </select>
</mapper>